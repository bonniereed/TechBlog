<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Comment:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-title">Comment Title:</label>
        <input class="form-input" type="text" id="comment-title" name="comment-title" />
      </div>
      <div class="form-group">
        <label for="comment-context">comment:</label>
        <textarea class="form-input" id="comment-context" name="comment-context"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
  {{#if comment.length}}
  <div class="col-md-6 comment-list">
    <h3>Comments:</h3>
    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/comment/{{{id}}}">{{title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{{id}}}">DELETE</button>
      </div>
    </div>

  </div>

</div>
{{/each}}
{{/if}}

<script src="../public/js/profile.js"></script>